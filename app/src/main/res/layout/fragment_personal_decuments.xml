<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorwhite"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingTop="60dp"
    android:paddingEnd="24dp"
    android:paddingBottom="30dp"
    tools:context=".ui.fragments.signUpFragments.PersonalDecumentsFragment">

    <TextView
        android:id="@+id/BankDetails_Fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/personal_documents"
        android:textColor="@color/colorBlack"
        android:textSize="30sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/Title_view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGrey"
        android:alpha=".5"
        android:layout_below="@id/BankDetails_Fragment_title"
        android:layout_marginTop="12dp"/>

    <TextView
        android:id="@+id/Birth_Certificate_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/birth_certificate"
        android:textColor="@color/colorBlack"
        android:textSize="22sp"
        android:textStyle="normal"
        android:layout_below="@id/Title_view"
        android:layout_marginTop="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/Birth_Certificate_View" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_info_outline_black_24dp"
        android:layout_toEndOf="@id/Birth_Certificate_View"
        android:layout_alignBottom="@id/Birth_Certificate_View"
        android:layout_marginStart="8dp"/>

    <View
        android:id="@+id/Birth_Certificate_comma"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGrey"
        android:alpha=".5"
        android:layout_marginTop="24dp"
        android:layout_below="@id/Birth_Certificate_View"/>

    <TextView
        android:id="@+id/Driving_Licence_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/driving_licence"
        android:textColor="@color/colorBlack"
        android:textSize="22sp"
        android:textStyle="normal"
        android:layout_below="@id/Birth_Certificate_comma"
        android:layout_marginTop="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/Driving_Licence_View" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_info_outline_black_24dp"
        android:layout_toEndOf="@id/Birth_Certificate_View"
        android:layout_alignBottom="@id/Driving_Licence_View"
        android:layout_marginStart="8dp"/>

    <View
        android:id="@+id/Driving_Licence_comma"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGrey"
        android:alpha=".5"
        android:layout_marginTop="24dp"
        android:layout_below="@id/Driving_Licence_View"/>

    <TextView
        android:id="@+id/Passport_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/passport"
        android:textColor="@color/colorBlack"
        android:textSize="22sp"
        android:textStyle="normal"
        android:layout_below="@id/Driving_Licence_comma"
        android:layout_marginTop="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/upload"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/Passport_view" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_info_outline_black_24dp"
        android:layout_toEndOf="@id/Passport_view"
        android:layout_alignBottom="@id/Passport_view"
        android:layout_marginStart="8dp"/>

    <View
        android:id="@+id/Passport_comma"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorGrey"
        android:alpha=".5"
        android:layout_marginTop="24dp"
        android:layout_below="@id/Passport_view"/>

    <TextView
        android:id="@+id/Command"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Passport_comma"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/by_continuing_i_confirm_that_i_have_read_and_agree_to_the"
        android:textColor="@color/colorGrey"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/Command_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/Command"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/terms_and_conditions_and_privacy_policy"
        android:textSize="16sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/personal_decoument_nex_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/Command_two"
        android:layout_marginTop="20dp"
        android:background="@drawable/my_button"
        android:text="@string/next"
        android:textColor="@color/colorwhite"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>