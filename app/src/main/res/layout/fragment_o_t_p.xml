<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="60dp"
    android:paddingStart="30dp"
    android:paddingEnd="24dp"
    android:orientation="vertical"
    android:background="@color/colorwhite"
    tools:context=".ui.fragments.loginFragments.OTPFragment">

    <TextView
        android:id="@+id/OTP_Fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/otp_verification"
        android:textSize="28sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Command"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/OTP_Fragment_title"
        android:layout_marginTop="14dp"
        android:alpha=".7"
        android:gravity="center_vertical"
        android:text="@string/four_digit_command"
        android:textSize="22sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/mobilePhone_Number_fourDigits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Command"
        android:layout_marginTop="14dp"
        tools:text="+201095060914"
        android:textStyle="normal"
        android:textSize="22sp"
        android:textColor="@color/colorBlack"/>

    <TextView
        android:id="@+id/edit_mobile_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:textSize="22sp"
        android:textColor="#0000ff"
        android:layout_toEndOf="@id/mobilePhone_Number_fourDigits"
        android:layout_below="@id/Command"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"/>



    <EditText
        android:id="@+id/first_digit_number"
        android:layout_width="75dp"
        android:layout_height="75dp"
        tools:text="4"
        android:maxLength="1"
        android:textStyle="normal"
        android:gravity="center"
        android:textSize="32sp"
        android:alpha=".7"
        android:layout_below="@id/mobilePhone_Number_fourDigits"
        android:background="@color/transparent"
        android:layout_marginTop="32dp"
        android:inputType="number"/>

    <View
        android:id="@+id/first_digit_view"
        android:layout_width="75dp"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:alpha=".5"
        android:layout_below="@id/first_digit_number" />


    <EditText
        android:id="@+id/Second_digit_number"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/mobilePhone_Number_fourDigits"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@id/first_digit_number"
        android:alpha=".7"
        android:background="@color/transparent"
        android:gravity="center"
        android:inputType="number"
        android:textSize="32sp"
        android:textStyle="normal"
        android:maxLength="1"
        tools:text="4" />

    <View
        android:id="@+id/second_digit_view"
        android:layout_width="75dp"
        android:layout_height="1dp"
        android:layout_below="@id/Second_digit_number"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@id/first_digit_view"
        android:alpha=".5"
        android:background="@color/colorBlack" />


    <EditText
        android:id="@+id/third_digit_number"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/mobilePhone_Number_fourDigits"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@id/Second_digit_number"
        android:alpha=".7"
        android:background="@color/transparent"
        android:gravity="center"
        android:inputType="number"
        android:textSize="32sp"
        android:textStyle="normal"
        android:maxLength="1"
        tools:text="4" />

    <View
        android:id="@+id/third_digit_view"
        android:layout_width="75dp"
        android:layout_height="1dp"
        android:layout_below="@id/third_digit_number"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@id/second_digit_view"
        android:alpha=".5"
        android:background="@color/colorBlack" />

    <EditText
        android:id="@+id/fourth_digit_number"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/mobilePhone_Number_fourDigits"
        android:layout_marginStart="18dp"
        android:layout_marginTop="32dp"
        android:layout_toEndOf="@id/third_digit_number"
        android:alpha=".7"
        android:background="@color/transparent"
        android:gravity="center"
        android:inputType="number"
        android:textSize="32sp"
        android:textStyle="normal"
        android:maxLength="1"
        tools:text="4" />

    <View
        android:id="@+id/fourth_digit_view"
        android:layout_width="75dp"
        android:layout_height="1dp"
        android:layout_below="@id/fourth_digit_number"
        android:layout_marginStart="18dp"
        android:layout_toEndOf="@id/third_digit_view"
        android:alpha=".5"
        android:background="@color/colorBlack" />

    <Button
        android:id="@+id/submit_four_digits_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/my_button"
        android:text="@string/submit"
        android:textColor="@color/colorwhite"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/second_digit_view"
        android:layout_marginTop="24dp" />

    <Button
        android:id="@+id/resend_four_digits_button"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/my_button"
        android:backgroundTint="@color/transparent"
        android:text="@string/resend_code"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/submit_four_digits_button"
        android:layout_marginTop="14dp" />

</RelativeLayout>