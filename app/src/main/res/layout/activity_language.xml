<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    android:paddingEnd="18dp"
    android:paddingStart="18dp"
    tools:context=".LanguageActivity">

    <TextView
        android:id="@+id/lang_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose language"
        android:textSize="30sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/Fasla_View"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:alpha=".3"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="24dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lang_id" />

    <ImageView
        android:id="@+id/English_Button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:padding="14dp"
        android:background="@drawable/my_button"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/Fasla_View"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorwhite"
        android:text="@string/english"
        android:textSize="28sp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="@id/English_Button"
        app:layout_constraintTop_toTopOf="@id/English_Button"
        app:layout_constraintBottom_toBottomOf="@id/English_Button"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:src="@drawable/birtain_flag"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="@id/English_Button"
        app:layout_constraintTop_toTopOf="@id/English_Button"
        app:layout_constraintBottom_toBottomOf="@id/English_Button"/>

    <View
        android:id="@+id/Fasla_Buttons"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:alpha=".3"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="24dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/English_Button" />

    <ImageView
        android:id="@+id/Arabic_Button"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/my_button"
        android:padding="14dp"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/Fasla_Buttons"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorwhite"
        android:text="@string/arabic"
        android:textSize="30sp"
        android:layout_marginEnd="26dp"
        app:layout_constraintEnd_toEndOf="@id/Arabic_Button"
        app:layout_constraintTop_toTopOf="@id/Arabic_Button"
        app:layout_constraintBottom_toBottomOf="@id/Arabic_Button"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:src="@drawable/egypt_flag"
        android:layout_marginStart="24dp"
        app:layout_constraintTop_toTopOf="@id/Arabic_Button"
        app:layout_constraintBottom_toBottomOf="@id/Arabic_Button"
        app:layout_constraintStart_toStartOf="@id/Arabic_Button"/>




</androidx.constraintlayout.widget.ConstraintLayout>