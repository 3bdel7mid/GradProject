<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40dp"
    android:paddingEnd="18dp"
    android:paddingStart="18dp"
    tools:context=".LanguageActivity">

    <TextView
        android:id="@+id/lang_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose language"
        android:textSize="30sp"
        android:textColor="@color/colorBlack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/Fasla_View"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:alpha=".3"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="24dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lang_id" />
    
    <Button
        android:id="@+id/English_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="English"
        android:textColorHint="@color/colorPrimary"
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:padding="14dp"
        android:background="@color/transparent"
        android:gravity="center_vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/Fasla_View"/>

    <View
        android:id="@+id/Fasla_Buttons"
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:alpha=".3"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="24dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/English_Button" />

    <Button
        android:id="@+id/Arabic_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="العربية"
        android:textSize="22sp"
        android:textColor="@color/colorBlack"
        android:background="@color/transparent"
        android:padding="14dp"
        android:gravity="center_vertical"
        android:textColorHint="@color/colorPrimary"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/Fasla_Buttons"/>

    
    

</androidx.constraintlayout.widget.ConstraintLayout>