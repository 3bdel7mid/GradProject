<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorwhite"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingTop="60dp"
    android:paddingEnd="24dp"
    android:paddingBottom="30dp"
    tools:context=".ui.fragments.signUpFragments.BankDetailsFragment">

    <TextView
        android:id="@+id/BankDetails_Fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bank_details"
        android:textColor="@color/colorBlack"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Bank_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:alpha=".6"
        android:text="@string/bank_name"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/BankDetails_Fragment_title"/>

    <EditText
        android:id="@+id/Bank_name_editText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:alpha=".5"
        android:textColor="@color/colorBlack"
        android:textSize="22sp"
        android:inputType="text|textAutoCorrect|textAutoComplete|textCapCharacters"
        android:hint="Credit Agricole"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Bank_name_view"/>

    <TextView
        android:id="@+id/AccountHolder_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:alpha=".6"
        android:text="@string/account_holder_name"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Bank_name_editText"/>

    <EditText
        android:id="@+id/last_name_editText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:alpha=".5"
        android:textColor="@color/colorBlack"
        android:textSize="22sp"
        android:hint="Mohamed Ahmed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/AccountHolder_name_view"/>

    <TextView
        android:id="@+id/Account_Number_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:alpha=".6"
        android:text="@string/account_number"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/last_name_editText"/>

    <EditText
        android:id="@+id/Account_Number_EditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:alpha=".5"
        android:inputType="number"
        android:textColor="@color/colorBlack"
        android:textSize="22sp"
        android:hint="ACNO123456789"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Account_Number_view"/>


    <TextView
        android:id="@+id/Swift_code_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:alpha=".6"
        android:text="@string/swift_ifsc_code"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Account_Number_EditText"/>

    <EditText
        android:id="@+id/Swift_code_EditText"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:alpha=".5"
        android:textColor="@color/colorBlack"
        android:textSize="22sp"
        android:hint="YT1234"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Swift_code_view"/>

    <TextView
        android:id="@+id/Command"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="@string/by_continuing_i_confirm_that_i_have_read_and_agree_to_the"
        android:textColor="@color/colorGrey"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Swift_code_EditText"/>

    <TextView
        android:id="@+id/Command_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="@string/terms_and_conditions_and_privacy_policy"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Command"/>

    <Button
        android:id="@+id/next_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/my_button"
        android:text="@string/next"
        android:textColor="@color/colorwhite"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Command_two"/>

</androidx.constraintlayout.widget.ConstraintLayout>